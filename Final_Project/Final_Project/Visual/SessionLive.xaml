<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Final_Project.Visual.SessionLive">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>

		<StackLayout Grid.Row="1">
			<Label x:Name="Project_Name" BackgroundColor="AliceBlue"  TextColor="Black" FontSize = "20" Text="Project name." />
			<Label x:Name="Task_Name" BackgroundColor="AliceBlue"  TextColor="Black" FontSize = "20" Text="Description Name" />
		</StackLayout>
		<StackLayout Grid.Row="2">
			<Label x:Name="Timer_Counter" BackgroundColor="AliceBlue"  TextColor="Black" FontSize = "20" Text="00:00:00" />
			<StackLayout Orientation="Horizontal"  HorizontalOptions="FillAndExpand">
				<StackLayout Orientation="Vertical"  HorizontalOptions="FillAndExpand">
					<Button x:Name="Start" Clicked="StartButtonClicked"  Text="Start" FontAttributes="Italic" FontSize="20" BackgroundColor="AliceBlue"></Button>
				</StackLayout>
				<StackLayout Orientation="Vertical"  HorizontalOptions="FillAndExpand">
					<Button x:Name="Stop" Clicked="PauseButtonClicked" Text="Stop" FontAttributes="Italic" FontSize="20" BackgroundColor="AliceBlue"></Button>
				</StackLayout>
			</StackLayout>
		</StackLayout>
	</Grid>
</ContentPage>